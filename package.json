{
  "name": "@bhairesh/ez.js",
  "version": "0.0.23",
  "description": "Helper and utility functions.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.js",
  "private": false,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "rm -rf dist && tsc --build",
    "watch": "tsc --build --watch",
    "clean": "tsc --build --clean",
    "dev": "nodemon ./src/tests/index.ts",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "prepare:husky": "npx husky install",
    "prepublishOnly": "pnpm build && pnpm test && pnpm docs",
    "eslint": "eslint *.js src/**/*.js",
    "eslint:fix": "eslint --fix *.js src/**/*.js",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier  --write .",
    "lint-staged": "lint-staged",
    "release": "sh ./src/scripts/release.sh",
    "docs:ts": "typedoc "
  },
  "author": "Bhairesh M <bhairesh@arithaconsulting.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/bhaireshm/ez.js.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "javascript",
    "utils"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "eslint": "^8.46.0",
    "eslint-plugin-import": "^2.28.0",
    "jest": "^29.7.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "simple-git": "^3.19.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2"
  }
}
