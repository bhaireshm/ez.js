{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "declaration": true,
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "NodeNext",
    "target": "ESNext",
    "sourceMap": false,
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "include": ["./src/index.ts", "./package.json"],
  "exclude": ["node_modules", "dist", "./src/tests/*", "./src/scripts/*", "./src/utils/browser/*"]
}
